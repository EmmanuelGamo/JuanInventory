<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuanInventory.MainPage"
             BackgroundColor="#d7dee4"
             NavigationPage.HasNavigationBar="false" 
             >

    <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
        <Image Source="Applogo.png" VerticalOptions="Start" HorizontalOptions="Center" HeightRequest="250" WidthRequest="250"></Image>
        <Label Text="Juan Inventory" HorizontalOptions="CenterAndExpand" FontSize="24" FontAttributes="Bold" TextColor="#6B7A99" ></Label>
        <Entry Placeholder="Email" PlaceholderColor="Black" x:Name="Email"></Entry>
        <Entry Placeholder="Password" PlaceholderColor="Black" x:Name = "Password" IsPassword="True"></Entry>
        <Button x:Name= "loginbtn" BackgroundColor="#6B7A99" Clicked="LoginButton_Clicked" TextColor="Black" Text="Login">

        </Button>
        <Button BackgroundColor="#D7ECEF" Clicked="SignUpButton_Clicked" TextColor="Black" Text="Sign Up" >

        </Button>

    </StackLayout>

</ContentPage>
