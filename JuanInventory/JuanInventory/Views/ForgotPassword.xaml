<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuanInventory.Views.ForgotPassword"
    BackgroundColor="#d7dee4">
    <ContentPage.Content>
        <StackLayout Padding="20"  >
            <Grid Margin="20,35,20,20" VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Text="Forgot your Password" FontSize="24"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />
                <Entry Grid.Row="2" x:Name="UserEmail" Placeholder="Email" Keyboard="Email"  ></Entry>
                <Button Grid.Row="3" x:Name= "Send" BackgroundColor="#6B7A99" Clicked="Send_Clicked"  HorizontalOptions="Center"  TextColor="Black" Text="Send">

                </Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>