<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuanInventory.Views.SignUp">
    <ContentPage.Content>
        <StackLayout Margin="20" Spacing="20">
            <ImageButton Source="Profilepic.png" WidthRequest="150" HeightRequest ="150" CornerRadius="100"  VerticalOptions="Center" HorizontalOptions ="Center" BackgroundColor="Transparent"></ImageButton>
            <Entry x:Name="Name" Placeholder="Full Name" Text="{Binding Name}"  
                 />
            <Entry x:Name="Email" Placeholder="Email" Text="{Binding Email}" Keyboard="Email"    
                 />
            <Entry x:Name="Password" Placeholder="Password" Text="{Binding Password}"     
                   IsPassword="True"/>
            <Entry x:Name="cfmpasswordentery" Placeholder="Confirm Password" Text="{Binding ConfirmPassword}"     
                   IsPassword="True" />
            

            <Button BackgroundColor="#D7ECEF" Clicked="Button_Clicked" TextColor="Black" Text="Sign Up" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>